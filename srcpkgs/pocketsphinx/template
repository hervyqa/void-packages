libpocketsphinx-devel_package() {
	depends="sphinxbase-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove usr/lib/pkgconfig
	}
}
